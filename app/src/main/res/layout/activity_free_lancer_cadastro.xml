<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.freelancer.FreeLancerCadastroActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cadastroFreeLancerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:text="Cadastro"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:text="Insira seus dados para criar seu cadastro!"
                android:textColor="#4c5663"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nomeCadastroInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/emailCadastroInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp" />

            <EditText
                android:id="@+id/senhaCadastroInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/confirmacaoSenhaCadastroInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Confirme sua senha"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/dtaNascimentoCadastroInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Data de Nascimento"
                android:inputType="date"
                android:padding="12dp" />

            <TextView
                android:id="@+id/mensagemErroCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:paddingBottom="16dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/enviarCadastroFreelancerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2196F3"
                android:onClick="enviarCadastroFreelancerButtonOnClick"
                android:text="Enviar"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>